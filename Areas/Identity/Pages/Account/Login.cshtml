@page
@model LoginModel
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    Layout = "~/Views/Shared/_LayoutSansMenu.cshtml";
    ViewData["Title"] = "Connexion";
}
<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .bg-image {
        background: url('/images/login-bg2.png') no-repeat center center fixed;
        background-size: cover;
        filter: blur(8px);
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: -1;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        max-width: 480px;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .login-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #1f2937;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        border-radius: 8px;
        font-weight: 500;
    }

    .text-info-box {
        background-color: #f3f4f6;
        border-left: 4px solid #2563eb;
        padding: 15px;
        border-radius: 8px;
        color: #374151;
    }

    .logo-title {
        font-size: 28px;
        font-weight: bold;
        color: #1e3a8a;
    }

    .sub-text {
        color: #6b7280;
    }
</style>

<!-- ✅ Image de fond floutée -->
<div class="bg-image"></div>

<!-- ✅ Conteneur de connexion -->
<div class="login-container">
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="logo-title"><i class="bi bi-mortarboard-fill me-2"></i>GestionÉtudiants</div>
            <p class="sub-text">Veuillez vous connecter pour accéder à votre espace</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form method="post" id="account">
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="exemple@domaine.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Se souvenir de moi</label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100">
                <i class="bi bi-box-arrow-in-right me-1"></i> Se connecter
            </button>

            <div class="mt-3 text-center">
                <a asp-page="./ForgotPassword">Mot de passe oublié ?</a>
            </div>
        </form>

        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
