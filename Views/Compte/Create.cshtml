@{
    ViewData["Title"] = "Créer un Compte";
}

<!-- ✅ TITRE DE LA PAGE -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">
        <i class="bi bi-person-plus-fill me-2 text-success"></i>Créer un compte utilisateur
    </h2>

    <a asp-action="List" class="btn btn-outline-primary">
        <i class="bi bi-search me-1"></i> Voir les comptes existants
    </a>
</div>

<!-- ✅ FORMULAIRE DE CRÉATION -->
<div class="card shadow rounded-4">
    <div class="card-header bg-success text-white fw-semibold rounded-top-4">
        <i class="bi bi-plus-circle me-2"></i> Ajouter un nouvel utilisateur
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">
            <!-- Email -->
            <div class="form-group mb-3">
                <label class="fw-medium">Adresse email :</label>
                <input name="email" class="form-control shadow-sm" placeholder="exemple@domaine.com" required />
            </div>

            <!-- Mot de passe -->
            <div class="form-group mb-3">
                <label class="fw-medium">Mot de passe :</label>
                <input name="password" type="password" class="form-control shadow-sm" placeholder="••••••" required />
            </div>

            <!-- Rôle -->
            <div class="form-group mb-4">
                <label class="fw-medium">Rôle :</label>
                <select name="role" asp-items="ViewBag.Roles" class="form-select shadow-sm"></select>
            </div>

            <!-- Bouton de soumission -->
            <button type="submit" class="btn btn-primary px-4 rounded-pill">
                <i class="bi bi-check-circle me-1"></i> Créer
            </button>
        </form>
    </div>
</div>
