@model GestionEtudiants.Models.Etudiant

@{
    ViewData["Title"] = "Créer un étudiant";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-form {
        max-width: 700px;
        margin: auto;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 25px;
    }

    .form-control, .form-select {
        border-radius: 8px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .btn-primary {
        background-color: #2563eb;
        border-color: #2563eb;
        border-radius: 8px;
        padding: 8px 16px;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
            border-color: #1d4ed8;
        }

    .btn-secondary {
        border-radius: 8px;
        padding: 8px 16px;
    }
</style>

<div class="container py-4">
    <div class="card-form">
        <h3 class="mb-4 text-primary"><i class="bi bi-person-plus-fill"></i> Ajouter un étudiant</h3>

        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prenom" class="form-label"></label>
                <input asp-for="Prenom" class="form-control" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CIN" class="form-label">CIN (si applicable)</label>
                <input asp-for="CIN" class="form-control" />
                <span asp-validation-for="CIN" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodeApogee" class="form-label">Code Apogée (si applicable)</label>
                <input asp-for="CodeApogee" class="form-control" />
                <span asp-validation-for="CodeApogee" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClasseId" class="form-label">Classe</label>
                <select asp-for="ClasseId" class="form-select" asp-items="ViewBag.Classes" required>
                    <option value="">-- Sélectionner une classe --</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="DateNaissance" class="form-label"></label>
                <input asp-for="DateNaissance" class="form-control" type="date" required />
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telephone" class="form-label"></label>
                <input asp-for="Telephone" class="form-control" type="tel" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Photo de l'étudiant</label>
                <input type="file" name="PhotoFile" class="form-control" accept="image/*" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-1"></i>Créer</button>
                <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseSelectionnee" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                </a>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
