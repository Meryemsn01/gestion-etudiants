@model GestionEtudiants.Models.Etudiant

@{
    ViewData["Title"] = "Supprimer un étudiant";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-delete {
        max-width: 600px;
        margin: auto;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        padding: 25px;
    }

    .info-row {
        margin-bottom: 12px;
    }

    .info-title {
        font-weight: 600;
        color: #374151;
    }

    .btn-danger {
        border-radius: 8px;
        padding: 8px 16px;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 8px 16px;
    }
</style>

<div class="container py-5">
    <div class="card-delete">
        <h3 class="text-danger mb-4"><i class="bi bi-exclamation-triangle-fill"></i> Confirmation de suppression</h3>
        <p class="mb-4">Êtes-vous sûr(e) de vouloir supprimer définitivement cet étudiant ? Cette action est irréversible.</p>

        <div class="mb-3">
            <div class="info-row">
                <span class="info-title">Nom :</span> @Model.Nom
            </div>
            <div class="info-row">
                <span class="info-title">Prénom :</span> @Model.Prenom
            </div>
            <div class="info-row">
                <span class="info-title">Classe :</span> @Model.Classe.Nom
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-1"></i>Supprimer</button>
                <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseId" class="btn btn-secondary">Annuler</a>

            </div>
        </form>
    </div>
</div>
