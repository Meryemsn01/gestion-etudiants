@model GestionEtudiants.Models.Etudiant

@{
    ViewData["Title"] = "Détails de l'étudiant";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8; /* Couleur claire définie */
        color: #1f2937; /* Couleur du texte */
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .student-photo {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #ddd;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .table {
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    }

        .table th {
            width: 35%;
            background-color: #f1f3f5;
            font-weight: 600;
            color: #495057;
        }

    .btn {
        border-radius: 8px;
        padding: 6px 18px;
        font-weight: 500;
    }

    .btn-primary-custom {
        background-color: #2563eb;
        color: white;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #1e40af;
            color: white;
        }

    .btn-outline-custom {
        border: 1px solid #2563eb;
        color: #2563eb;
        background-color: transparent;
    }

        .btn-outline-custom:hover {
            background-color: #2563eb;
            color: white;
        }

    .btn-edit-custom {
        background-color: #f59e0b; /* Orange doux */
        color: white;
        border: none;
    }

        .btn-edit-custom:hover {
            background-color: #d97706; /* Orange légèrement plus foncé au hover */
            color: white;
        }

    .btn-outline-custom {
        border: 1px solid #2563eb;
        color: #2563eb;
        background-color: transparent;
    }

        .btn-outline-custom:hover {
            background-color: #2563eb;
            color: white;
        }

</style>

<h2 class="text-center titre-page mb-4">
    <i class="bi bi-person-lines-fill"></i> Fiche Étudiant
</h2>


<div class="card p-4">
    <div class="row">
        <!-- Colonne Image -->
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="@(string.IsNullOrEmpty(Model.Photo) ? "/uploads/default.png" : Model.Photo)"
                 alt="Photo de @Model.Nom" class="student-photo" />
        </div>

        <!-- Colonne Informations -->
        <div class="col-md-8">
            <table class="table table-bordered">
                <tr>
                    <th>Nom</th>
                    <td>@Model.Nom</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>@Model.Prenom</td>
                </tr>
                <tr>
                    <th>CIN / Code Apogée</th>
                    <td>@(string.IsNullOrEmpty(Model.CIN) ? Model.CodeApogee : Model.CIN)</td>
                </tr>
                <tr>
                    <th>Classe</th>
                    <td>@(Model.Classe != null ? Model.Classe.Nom : "Non attribuée")</td>
                </tr>
                <tr>
                    <th>Date de Naissance</th>
                    <td>@Model.DateNaissance.ToString("dd-MM-yyyy")</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>@Model.Telephone</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- Boutons centrés -->
    <!-- Boutons centrés -->
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit-custom me-2">
            <i class="bi bi-pencil-square"></i> Modifier
        </a>
        <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseSelectionnee" class="btn btn-outline-custom">
            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
        </a>
    </div>

</div>
