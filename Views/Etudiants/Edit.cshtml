@model GestionEtudiants.Models.Etudiant

@{
    ViewData["Title"] = "Modifier l'étudiant";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-custom {
        max-width: 700px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        padding: 30px;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #ccc;
        box-shadow: none;
    }

        .form-control:focus, .form-select:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .btn-save {
        background-color: #10b981;
        color: white;
        border-radius: 8px;
        border: none;
        padding: 8px 20px;
    }

        .btn-save:hover {
            background-color: #059669;
        }

    .btn-cancel {
        background-color: #6b7280;
        color: white;
        border-radius: 8px;
        border: none;
        padding: 8px 20px;
    }

        .btn-cancel:hover {
            background-color: #4b5563;
        }

    h2 {
        font-weight: 600;
        color: #2563eb;
        margin-bottom: 25px;
        text-align: center;
    }

    .img-thumbnail {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    }
</style>

<div class="card-custom">
    <h2><i class="bi bi-pencil-square me-2"></i>Modifier l'étudiant</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nom" class="form-label">Nom</label>
            <input asp-for="Nom" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Prenom" class="form-label">Prénom</label>
            <input asp-for="Prenom" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CIN" class="form-label">CIN</label>
            <input asp-for="CIN" class="form-control" />
            <span asp-validation-for="CIN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CodeApogee" class="form-label">Code Apogée</label>
            <input asp-for="CodeApogee" class="form-control" />
            <span asp-validation-for="CodeApogee" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ClasseId" class="form-label">Classe</label>
            <select asp-for="ClasseId" class="form-select" asp-items="ViewBag.Classes">
                <option value="">-- Sélectionnez une classe --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="DateNaissance" class="form-label">Date de Naissance</label>
            <input asp-for="DateNaissance" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Telephone" class="form-label">Téléphone</label>
            <input asp-for="Telephone" type="tel" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <div class="mb-3">
                <label class="form-label">Photo Actuelle</label>
                <div>
                    <img src="@Url.Content(Model.Photo)" alt="Photo actuelle" class="img-thumbnail" />
                </div>
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Changer la Photo</label>
            <input type="file" name="PhotoFile" class="form-control" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-save">
                <i class="bi bi-check-circle me-1"></i> Enregistrer
            </button>
            <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseId" class="btn btn-cancel">
                <i class="bi bi-x-circle me-1"></i> Annuler
            </a>
        </div>
    </form>
</div>
