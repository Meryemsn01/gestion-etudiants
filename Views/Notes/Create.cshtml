@model GestionEtudiants.Models.Note

@{
    ViewData["Title"] = "Ajouter une Note";
}

<!-- Google Fonts + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-form {
        max-width: 600px;
        margin: 40px auto;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #374151;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 0.95rem;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
        }

    .btn-custom {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #2563eb;
        border-color: #2563eb;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-primary:hover {
        background-color: #1e4fd1;
    }

    .btn-secondary:hover {
        background-color: #5c636a;
    }
</style>

<div class="card-form">
    <h4 class="text-primary mb-4"><i class="bi bi-plus-circle me-2"></i>Ajouter une Note</h4>

    <form asp-action="Create">
        <div class="form-group">
            <label>Étudiant :</label>
            <select asp-for="EtudiantId" class="form-control" asp-items="ViewBag.Etudiants"></select>
        </div>

        <div class="form-group">
            <label>Note (valeur)</label>
            <input asp-for="Valeur" class="form-control" type="number" step="0.01" min="0" max="20" required />
        </div>

        <input type="hidden" asp-for="MatiereId" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary btn-custom">
                <i class="bi bi-save me-1"></i> Enregistrer
            </button>
            <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseId" class="btn btn-secondary btn-custom">
                <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
            </a>
        </div>
    </form>
</div>
