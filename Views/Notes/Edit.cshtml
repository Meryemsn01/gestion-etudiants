@model GestionEtudiants.Models.Note

@{
    ViewData["Title"] = "Modifier la Note";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-custom {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px;
        margin: 40px auto;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
        border-radius: 8px;
        padding: 8px 18px;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 8px 18px;
    }

    h2 {
        font-weight: 600;
        margin-bottom: 25px;
        color: #2563eb;
        text-align: center;
    }
</style>

<div class="card-custom">
    <h2><i class="bi bi-pencil-square me-2"></i>Modifier une Note</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EtudiantId" class="form-label">Étudiant</label>
            <select asp-for="EtudiantId" class="form-control" asp-items="ViewBag.Etudiants">
                <option value="">-- Sélectionnez un étudiant --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="MatiereId" class="form-label">Matière</label>
            <select asp-for="MatiereId" class="form-control" asp-items="ViewBag.Matieres">
                <option value="">-- Sélectionnez une matière --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Valeur" class="form-label">Note</label>
            <input asp-for="Valeur" class="form-control" type="number" min="0" max="20" required />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i> Enregistrer
            </button>
            <a asp-action="Index" asp-route-classeId="@ViewBag.ClasseId" class="btn btn-secondary">Retour à la liste</a>

        </div>
    </form>
</div>
