@using GestionEtudiants.Models
@model GestionEtudiants.Models.Matiere

@{
    ViewData["Title"] = "Supprimer la Matière";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-delete {
        max-width: 600px;
        margin: auto;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 30px;
    }

    h3 {
        font-weight: 600;
        margin-bottom: 20px;
    }

    .info-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 5px;
    }

    .info-value {
        margin-bottom: 15px;
    }

    .btn-custom {
        border-radius: 8px;
        padding: 8px 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-secondary {
        border-radius: 8px;
        padding: 8px 16px;
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5c636a;
        }
</style>

<div class="container py-5">
    <div class="card-delete">
        <h3 class="text-danger mb-4"><i class="bi bi-exclamation-triangle-fill"></i> Confirmation de suppression</h3>

        <p class="mb-4 text-center">Êtes-vous sûr(e) de vouloir supprimer cette matière ?</p>

        <div>
            <div class="info-label">Nom de la matière :</div>
            <div class="info-value">@Model.Nom</div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-custom">
                    <i class="bi bi-trash-fill me-1"></i> Supprimer
                </button>
                <a asp-action="Index" asp-route-classeId="@Model.ClasseId" class="btn btn-secondary btn-custom">
                    <i class="bi bi-arrow-left-circle me-1"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>
