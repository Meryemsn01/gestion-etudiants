@using GestionEtudiants.Models
@model GestionEtudiants.Models.Matiere

@{
    ViewData["Title"] = "Détails de la matière";
}

<h2>Détails de la matière</h2>

<div class="card shadow-sm p-4">
    <table class="table table-bordered">
        <tr>
            <th>Nom</th>
            <td>@Model.Nom</td>
        </tr>
        <tr>
            <th>Coefficient</th>
            <td>@Model.Coefficient</td>
        </tr>
    </table>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
