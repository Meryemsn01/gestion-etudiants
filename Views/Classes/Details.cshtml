@model GestionEtudiants.Models.Classe

@{
    ViewData["Title"] = "Détails de la classe";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-custom {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 25px;
    }

    .btn-rounded {
        border-radius: 8px;
        padding: 6px 18px;
        font-weight: 500;
    }

    .btn-edit {
        background-color: #f59e0b;
        color: white;
    }

        .btn-edit:hover {
            background-color: #d97706;
            color: white;
        }

    .btn-secondary-custom {
        background-color: #6b7280;
        color: white;
    }

        .btn-secondary-custom:hover {
            background-color: #4b5563;
            color: white;
        }

    .titre-page {
        color: #374151;
        font-weight: 600;
    }

    .info-label {
        font-weight: 600;
        color: #4b5563;
    }

    .info-value {
        color: #1f2937;
    }
</style>

<div class="container py-4">
    <div class="card-custom">
        <h4 class="titre-page mb-3">
            <i class="bi bi-info-circle-fill"></i> Détails de la Classe
        </h4>
        <hr />

        <div class="row">
            <div class="col-md-3 info-label">
                Nom de la classe :
            </div>
            <div class="col-md-9 info-value">
                @Model.Nom
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit btn-rounded me-2">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary-custom btn-rounded">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
