@model IEnumerable<GestionEtudiants.Models.Classe>

@{
    ViewData["Title"] = "Liste des Classes";
}

<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f8;
        color: #1f2937;
    }

    .card-custom {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .table-custom {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .table-custom th {
            background-color: #2563eb; /* Bleu principal */
            color: #ffffff;
        }

        .table-custom tbody tr:hover {
            background-color: #f1f5f9;
        }

    .btn-rounded {
        border-radius: 8px;
    }

    .btn-sm {
        padding: 4px 10px;
        font-size: 0.85rem;
    }
</style>

<div class="container py-4">
    <div class="card-custom mb-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0 text-primary">
            <i class="bi bi-list-ul"></i> Classes
        </h4>

        <a asp-action="Create" class="btn btn-success btn-rounded">
            <i class="bi bi-plus-lg"></i> Ajouter une classe
        </a>
    </div>

    <div class="card-custom">
        @if (Model.Any())
        {
            <table class="table table-custom table-hover">
                <thead>
                    <tr>
                        <th>Nom de la classe</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var classe in Model)
                    {
                        <tr>
                            <td>@classe.Nom</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@classe.Id" class="btn btn-warning btn-sm btn-rounded">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@classe.Id" class="btn btn-danger btn-sm btn-rounded">
                                    <i class="bi bi-trash"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@classe.Id" class="btn btn-info btn-sm btn-rounded">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-secondary rounded-3 mb-0">
                Aucune classe disponible.
            </div>
        }
    </div>
</div>
